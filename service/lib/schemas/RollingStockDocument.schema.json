{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": [
    "type",
    "class",
    "unitNumber",
    "manufacturer"
  ],
  "properties": {
    "id": {
      "type": "string",
      "readOnly": true
    },
    "createdAt": {
      "type": "number",
      "readOnly": true
    },
    "updatedAt": {
      "type": "number",
      "readOnly": true
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "diesel",
        "electric",
        "passenger",
        "freight",
        "maintenance",
        "emu",
        "dmu"
      ],
      "minLength": 1
    },
    "class": {
      "type": "string",
      "minLength": 1
    },
    "unitNumber": {
      "type": "string",
      "minLength": 1
    },
    "manufacturer": {
      "type": "string",
      "minLength": 1
    },
    "manufactureDate": {
      "type": "string",
      "format": "date"
    },
    "operator": {
      "type": "string"
    },
    "inService": {
      "type": "boolean"
    },
    "serviceStartDate": {
      "type": "string",
      "format": "date"
    },
    "serviceEndDate": {
      "type": "string",
      "format": "date"
    }
  }
}