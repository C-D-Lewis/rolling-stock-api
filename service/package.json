{
  "name": "railway-stock-service",
  "version": "1.0.0",
  "description": "Service for managing trains and timetables.",
  "scripts": {
    "build": "./build.sh",
    "start": "npm run build && node dist/index.js",
    "lint": "eslint src --fix",
    "docker:build": "docker build -t railway-stock-service .",
    "docker:run": "docker run -t railway-stock-service",
    "test:unit": "nyc mocha tests/unit/index.spec.js",
    "test:e2e": "mocha tests/end-to-end/index.spec.js"
  },
  "author": "Chris Lewis",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.5.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "chai-http": "^4.3.0",
    "chance": "^1.1.3",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "mongodb": "^3.5.7"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb-base",
    "rules": {
      "no-console": 0
    },
    "env": {
      "node": true
    }
  },
  "nyc": {
    "exclude": [
      "tests/*"
    ],
    "include": [
      "src/**/*.js"
    ],
    "all": true,
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "report-dir": "./reports"
  }
}
